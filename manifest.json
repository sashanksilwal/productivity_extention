{
  "manifest_version": 3,
  "name": "Command Bar â€” Productivity Extension",
  "description": "A universal command bar for navigation, organization, and AI services.",
  "version": "1.1",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "sessions",
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "settings.html",

  "action": {
    "default_title": "Command Bar",
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"]
}
